{
  "id": "elasticsearch",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "elasticsearch",
      "containers": [
        {
          "name": "elasticsearch",
          "hostname": "elasticsearch",
          "image": "elasticsearch",
          "ports": [
            {
              "containerPort": 9200,
              "hostPort": 9200
            },
            {
              "containerPort": 9300
            }
          ],
          "volumeMounts": [
            {
              "name": "es-persistent-storage",
              "mountPath": "/data"
            }
          ]
        }
      ],
      "volumes": [
        {
          "name": "es-persistent-storage",
          "source":{
            "emptyDir": {}
          }
        }
      ]
    }
  },
  "labels": {
    "name": "elasticsearch",
    "role": "monitoring"
  }
}